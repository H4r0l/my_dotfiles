{
    "layer": "top",
    "height": 0,
    "position": "top",
    "modules-left": [
        "custom/clipboard",
        "hyprland/workspaces",
        "hyprland/window",
        "keyboard-state"
    ],
    "modules-center": [
        "tray",
        "clock#3",
        "custom/weather"
    ],
    "modules-right": [
        "pulseaudio",
        "cpu",
        "memory",
        "network",
        "custom/wlogout"
    ],
    "custom/clipboard": {
        "format": "{} Ôãí  ",
        "tooltip": true,
        "on-click": "cliphist list | wofi -d -p | cliphist decode | wl-copy",
        "on-click-right": "cliphist wipe",
        "interval": 5
    },
    "tray": {
        "icon-size": 15
    },
    "custom/wlogout": {
        "format": " ‚èª  ",
        "on-click": "wlogout",
        "tooltip": false
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "1": "I",
            "2": "II",
            "3": "III",
            "4": "IV",
            "5": "V",
            "6": "VI",
            "7": "VII",
            "8": "VIII",
            "9": "IX",
            "10": "X"
        },
        "on-click": "activate",
        "sort-by-number": true,
        "active-only": false
    },
    "clock#3": {
        "format": " {:%a %d-%m | %H:%M} ",
        "tooltip": true,
        "tooltip-format": " <tt><big>{calendar}</big>{}</tt> "
    },
    "pulseaudio": {
        "format": " {icon}  {volume:2}% {format_source} ",
        "format-bluetooth": "{icon}  {volume}% Ôäî",
        "format-muted": "MUTE",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphones": "ÔÄ•",
            "default": [
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "scroll-step": 5,
        "on-click": "pamixer -t",
        "on-click-right": "pavucontrol"
    },
    "memory": {
        "interval": 5,
        "format": " Ôî∏ {}% "
    },
    "cpu": {
        "interval": 5,
        "format": " üíª {usage:2}% "
    },
    "network": {
        "format-wifi": " ({signalStrength}%) Ôá´  ",
        "format-ethernet": " üì∂ ",
        "tooltip-format": "{gwaddr}",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "‚ö† ",
        "format-alt": "{ipaddr}"
    },
    "custom/weather": {
        "format": " {} ¬∞",
        "tooltip": true,
        "interval": 3600,
        "exec": "wttrbar",
        "return-type": "json"
    },
}
